<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS to Gmail"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statut: Initialisation..."
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonRequestPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demander les permissions"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonGmailAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connexion Gmail"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRecipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email destinataire"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonSaveConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauvegarder configuration"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewSmsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS traitÃ©s: 0"
            android:textSize="14sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/buttonTestSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tester envoi email"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>