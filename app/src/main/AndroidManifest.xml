<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Feature téléphonie -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    
    <!-- Permissions SMS -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    
    <!-- Permissions réseau -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Permissions services arrière-plan -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Permission pour comptes Google -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smstomail">

        <!-- Activité splash -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SMStoMail.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activité principale -->
        <activity
            android:name=".SimpleMainActivity"
            android:exported="false"
            android:theme="@style/Theme.Smstomail" />

        <!-- Activité des filtres avancés -->
        <activity
            android:name=".AdvancedFiltersActivity"
            android:exported="false"
            android:theme="@style/Theme.Smstomail"
            android:parentActivityName=".SimpleMainActivity" />

        <!-- OAuth2CallbackActivity supprimée - utilise maintenant serveur HTTP local -->

        <!-- BroadcastReceiver pour SMS -->
        <receiver
            android:name=".SimpleSmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- BroadcastReceiver avancé pour SMS avec filtrage automatique -->
        <receiver
            android:name=".AdvancedSmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Service pour envoi email -->
        <service
            android:name=".SimpleEmailService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>